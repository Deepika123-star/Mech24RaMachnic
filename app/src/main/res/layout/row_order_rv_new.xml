<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    app:cardElevation="@dimen/space_3"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:layout_width="120dp"
                android:id="@+id/order_picked"
                android:textColor="@color/white"
                android:text="Pick Order"
                android:visibility="gone"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginStart="@dimen/space_10"
                android:background="@drawable/bg_rounded_button_green"
                android:layout_height="35dp" />


            <ImageView
                android:visibility="gone"
                android:layout_width="40dp"
                android:id="@+id/call"
                android:paddingLeft="@dimen/space_5"
                android:paddingRight="@dimen/space_5"
                android:paddingTop="@dimen/space_5"
                android:paddingBottom="@dimen/space_5"
                android:layout_marginTop="@dimen/space_10"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp"
                android:src="@drawable/call"
                android:layout_height="40dp"
                tools:ignore="VectorDrawableCompat" />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
                android:layout_below="@+id/call"
            android:id="@+id/re"
            android:layout_marginRight="@dimen/space_10"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="1dp"
                    android:weightSum="2"
                    android:gravity="start|center">

                <com.smartwebarts.mech24ra.Fonts.LatoBLack
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Order ID:"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />


                <com.smartwebarts.mech24ra.Fonts.LatoBLack
                    android:id="@+id/tv_order_no"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end|center">
                <com.smartwebarts.mech24ra.Fonts.LatoBLack
                    android:id="@+id/tv_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingBottom="@dimen/space_5"
                    android:textColor="@color/green"
                    android:textSize="16sp" />
            </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_2"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="1dp"
                    android:weightSum="2"
                    android:gravity="left|top">

                <com.smartwebarts.mech24ra.Fonts.LatoBLack
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Receiver Name:"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_small" />

                <com.smartwebarts.mech24ra.Fonts.LatoBLack
                    android:id="@+id/tv_recivername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="top|left"
                    android:layout_gravity="top|left"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_small" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:gravity="left|center">
                <com.smartwebarts.mech24ra.Fonts.LatoBLack
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:visibility="gone"
                    android:text="Contact:"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_small" />

                <com.smartwebarts.mech24ra.Fonts.LatoBLack
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:autoLink="phone"
                    android:gravity="start|top"
                    android:drawablePadding="@dimen/space_5"
                    android:drawableStart="@drawable/call"
                    android:text="ArtÃ­culo total"
                    android:textColor="#000" /></LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:text="Get Details"
                        android:padding="@dimen/space_5"
                        android:id="@+id/getDetails"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_margin="10dp"
                        android:textAllCaps="false"
                        android:textSize="@dimen/space_15"
                        android:background="@drawable/bg_rounded_button_green"
                        android:layout_height="wrap_content" />

                </LinearLayout>



            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>