<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:orientation="vertical"
    tools:ignore="UselessParent, UseCompoundDrawables, RtlSymmetry, UnusedAttribute, UseCompatTextViewDrawableXml"
    tools:context="com.smartwebarts.mech24ra.activity.profile.MyProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/dashboard_bottom_roundbg" />

    <!--Top Header Layout-->
    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:onClick="back"
            android:src="@drawable/ic_chevron_left_black_24dp"
            tools:ignore="ContentDescription" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Account"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/refresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            app:tint="@color/white"
            android:src="@drawable/ic_baseline_refresh_24"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@+id/topbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <!--Top Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circularbordersolid"
                android:gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/userProfilePic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_16sdp"
                            android:scaleType="fitXY"
                            android:background="@color/grey_50"
                            android:src="@drawable/ic_profile"
                            tools:ignore="ContentDescription" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_add_photo"
                            style="@style/FabStyle"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/Username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#424242"
                        android:textSize="21sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <!--Option Bar-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/circularbordersolid"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/personalinfobtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="13dp"
                    android:text="@string/user_info"
                    android:textAllCaps="true"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <!--Bootom Cards with sections-->
            <LinearLayout
                android:id="@+id/personalinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">


                <!--Contact Details-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circularbordersolid"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/basic_details"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/edit"
                            android:visibility="gone"
                            android:textColor="#FFCF66"
                            android:layout_marginEnd="10dp"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingEnd="8dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circular_grey_bordersolid"
                                android:padding="10dp"
                                android:src="@drawable/ic_baseline_call_24"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/UserMobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:textSize="15sp"
                                android:textColor="@color/material_blue_grey_95"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:paddingEnd="8dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circular_grey_bordersolid"
                                android:padding="10dp"
                                android:src="@drawable/email_outline"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/userEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:textColor="@color/material_blue_grey_95"
                                android:textSize="15sp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:paddingEnd="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circular_grey_bordersolid"
                            android:padding="10dp"
                            android:src="@drawable/ic_baseline_my_location_24"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/userAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/material_blue_grey_95"
                            android:textSize="15sp"
                            android:textIsSelectable="true"
                            android:drawableTint="@android:color/black"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableEnd="@drawable/ic_edit_black"
                            android:text="Add an address"
                            android:autoLink="map" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/shopinfo"
                style="@style/imageUploadCardLayout">

                <!--Shop Details-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/shopName"
                        style="@style/TitleTextStyle"
                        android:text="@string/shop_name" />

                    <ImageView
                        android:id="@+id/shopPic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/shopName"
                        android:background="@color/grey_50"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_add_gallery_photo"
                    app:srcCompat="@drawable/outline_cloud_upload_24"
                    style="@style/FabStyle" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/gstinfo"
                style="@style/imageUploadCardLayout">


                <!--GST Details-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/gstNumber"
                        android:text="Driving License"
                        style="@style/TitleTextStyle" />

                    <ImageView
                        android:id="@+id/backPic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/gstNumber"
                        android:background="@color/grey_50"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_add_gst_photo"
                    app:srcCompat="@drawable/outline_cloud_upload_24"
                    style="@style/FabStyle" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/adhaarinfo"
                style="@style/imageUploadCardLayout">


                <!--GST Details-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/adhaarNumber"
                        android:text="Adhaar Card"
                        style="@style/TitleTextStyle" />

                    <ImageView
                        android:id="@+id/adhaarPic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/adhaarNumber"
                        android:background="@color/grey_50"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_add_adhaar_photo"
                    app:srcCompat="@drawable/outline_cloud_upload_24"
                    style="@style/FabStyle" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mechanicinfo"
                android:visibility="gone"
                style="@style/imageUploadCardLayout">


                <!--GST Details-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/mechanicName"
                        android:text="Mechanic Pic"
                        style="@style/TitleTextStyle" />

                    <ImageView
                        android:id="@+id/mechanicPic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/mechanicName"
                        android:background="@color/grey_50"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_add_mechanic_photo"
                    app:srcCompat="@drawable/outline_cloud_upload_24"
                    style="@style/FabStyle" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>